<h2><%= current_user.username %>'s Page</h2>
<ul>
  <% unless current_user.confirmed_by?(:email) %>
  <li><%= link_to t('.connect_email'), new_users_user_auth_path(provider: :email) %></li>
  <% else %>
  <li><%= link_to t('.edit_email'), edit_users_user_auth_path(provider: :email) %></li>
  <% end %>
  <% unless current_user.confirmed_by?(:twitter) %>
  <li><%= link_to t('.connect_twitter'), new_users_user_auth_path(provider: :twitter) %></li>
  <% else %>
  <li><%= link_to t('.disconnect_twitter'), edit_users_user_auth_path(provider: :twitter) %></li>
  <% end %>
  <% unless current_user.confirmed_by?(:facebook) %>
  <li><%= link_to t('.connect_facebook'), new_users_user_auth_path(provider: :facebook) %></li>
  <% else %>
  <li><%= link_to t('.disconnect_facebook'), edit_users_user_auth_path(provider: :facebook) %></li>
  <% end %>
</ul>
