.login-form
  .card.hoverable
    .card-content
      span.card-title.center= title
      .divider
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        - if devise_error_messages? || alert
          .form-errors.red.lighten-1
            = devise_error_messages!
            = alert
        .form-inputs.row
          = f.input :username, autofocus: true, autocomplete: "off", required: true, icon: "person",
                               input_html: { minlength: User::MIN_USERNAME_LENGTH, maxlength: User::MAX_USERNAME_LENGTH }
          = f.input :password, autocomplete: "off", required: true, icon: "lock",
                               input_html: { minlength: User.password_length.min, maxlength: User.password_length.max }
        .form-actions.center
          = f.button :submit, t('.preview'), name: 'preview', class: 'waves-button-input'
      .card-action
        .devise-links
          = render "users/shared/links"
