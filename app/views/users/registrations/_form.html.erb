<div class="login-form">
  <div class="card hoverable">
    <div class="card-content">
      <span class="card-title center"><%= title %></span>
      <div class="divider"></div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-inputs row">

          <div class="input-field col s12 username required user_username">
            <i class="material-icons prefix">person</i>
            <%= f.label :username %><br />
            <%= f.text_field :username, autofocus: true %>
          </div>

          <div class="input-field col s12 password required user_password">
            <i class="material-icons prefix">lock</i>
            <%= f.label :password %><br />
            <%= f.password_field :password %>
          </div>
        </div>
        <div class="form-actions center">
          <i class="btn waves-effect waves-input-wrapper" style="">
            <%= f.submit t('.preview'), name: 'preview', class: 'waves-button-input' %>
          </i>
        </div>
      <% end %>
      <div class="card-action">
        <div class="devise-links">
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
